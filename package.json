{
  "name": "feedlog-toolkit",
  "version": "1.0.0",
  "description": "Monorepo for Feedlog Toolkit - Core SDK, Web Components, and Framework Wrappers",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@feedlog-toolkit/core",
    "build:webcomponents": "npm run build --workspace=@feedlog-toolkit/webcomponents",
    "build:react": "npm run build --workspace=@feedlog-toolkit/react",
    "build:vue": "npm run build --workspace=@feedlog-toolkit/vue",
    "dev": "npm run dev --workspace=@feedlog-toolkit/webcomponents",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
