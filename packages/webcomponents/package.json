{
  "name": "@feedlog-ai/webcomponents",
  "version": "0.0.25",
  "description": "Stencil web components for Feedlog Toolkit - Data visualization components",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "collection": "./dist/collection/collection-manifest.json",
  "unpkg": "./dist/feedlog-toolkit/feedlog-toolkit.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js",
      "types": "./loader/index.d.ts"
    },
    "./custom-elements": {
      "import": "./dist/components/index.js",
      "types": "./dist/types/components.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/types/components/*.d.ts"
    },
    "./dist/components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/types/components/*.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "custom-elements": [
        "./dist/types/components.d.ts"
      ],
      "loader": [
        "./loader/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "loader"
  ],
  "scripts": {
    "build": "stencil build",
    "prepack": "npm run build",
    "start": "stencil build --dev --watch --serve",
    "dev": "stencil build --dev --watch --serve",
    "generate": "stencil generate",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watch",
    "test:coverage": "echo 'Webcomponents coverage skipped due to rollup issues'",
    "storybook": "storybook dev -p 6010 --no-open",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist loader"
  },
  "dependencies": {
    "@feedlog-ai/core": "^0.0.25",
    "dompurify": "^3.3.1",
    "marked": "^17.0.2"
  },
  "devDependencies": {
    "@stencil/core": "^4.0.0",
    "@stencil/react-output-target": "^1.4.0",
    "@stencil/storybook-plugin": "^0.5.6",
    "@stencil/vue-output-target": "^0.13.0",
    "@types/node": "^20.11.24",
    "rollup": "^4.0.0",
    "storybook": "^9.0.5",
    "typescript": "^5.3.3",
    "vite": "^6.0.0",
    "wsl-utils": "^0.1.0"
  },
  "license": "MIT",
  "keywords": [
    "feedlog",
    "webcomponents",
    "stencil",
    "data-visualization"
  ],
  "publishConfig": {
    "access": "public"
  }
}
